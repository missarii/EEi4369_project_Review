<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" />

    <!-- Inner padding -->
    <padding
        android:left="10dp"
        android:top="8dp"
        android:right="10dp"
        android:bottom="8dp" />

</shape>
