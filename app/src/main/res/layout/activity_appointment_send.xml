<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Booking Centre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Centre"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/centreSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Home Nurse (now shows USERNAME instead of email) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Home Nurse"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/nurseSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Mother Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother Full Name"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/motherNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Jane Doe"
            android:inputType="textPersonName" />

        <!-- Baby Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby Full Name"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/babyNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Baby Smith"
            android:inputType="textPersonName" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
