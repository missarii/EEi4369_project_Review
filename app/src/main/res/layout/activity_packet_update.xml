<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/subback2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:padding="16dp">

            <!-- Centered Card Container -->
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_container"
                android:padding="20dp"
                android:elevation="6dp"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/motherNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mother Name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg" />

                <EditText
                    android:id="@+id/motherBmiInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mother BMI"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg" />

                <EditText
                    android:id="@+id/babyBmiInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Baby BMI"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg" />

                <EditText
                    android:id="@+id/packetCountInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Thiriposa Packet Count"
                    android:inputType="number"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg" />

                <EditText
                    android:id="@+id/measuredMonthInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Measured Month"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg" />

                <Button
                    android:id="@+id/generateReportBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate Report"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</ScrollView>
