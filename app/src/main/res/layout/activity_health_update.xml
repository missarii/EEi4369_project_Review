<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/subback2">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp">

            <!-- ======= Transparent Red Container for Mom's Details ======= -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#80FF0000"
                android:padding="16dp"
                android:stretchColumns="1">

                <TableRow>
                    <TextView
                        android:text="Mother's Details"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:paddingBottom="8dp"
                        android:layout_span="2" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Name:"
                        android:textColor="@android:color/white"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etMotherName"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:hint="Mother Name" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Weight (kg):"
                        android:textColor="@android:color/white"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etMotherWeight"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="Mother Weight" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="BMI:"
                        android:textColor="@android:color/white"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etMotherBMI"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="Mother BMI" />
                </TableRow>

            </TableLayout>

            <!-- ======= White Container for Baby's Details ======= -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:stretchColumns="1"
                android:layout_marginBottom="24dp">

                <TableRow>
                    <TextView
                        android:text="Baby's Details"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp"
                        android:layout_span="2" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Name:"
                        android:textColor="@android:color/black"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etBabyName"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:hint="Baby Name" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Height (cm):"
                        android:textColor="@android:color/black"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etBabyHeight"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="Baby Height" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Weight (kg):"
                        android:textColor="@android:color/black"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etBabyWeight"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="Baby Weight" />
                </TableRow>

            </TableLayout>

            <!-- ======= Submit Button ======= -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Data"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
